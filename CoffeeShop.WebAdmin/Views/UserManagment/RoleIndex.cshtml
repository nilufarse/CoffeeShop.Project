@model List<RoleViewModel>

@{ ViewData["Title"] = "Index"; }

<div class="row mt-3 mx-3">
    <div id="tableProgress" class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-content widget-content-area">
                <div class="table-responsive">
                    <h2 class="text-primary">Role list</h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ foreach (var item in Model)
                                {
                    <tr>
                        <td class="text-center">#</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center" role="group">
                            <a asp-controller="UserManagment" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-danger" aria-current="page">  <i class="bi bi-trash-fill"></i>Delete</a>
                            <a asp-controller="UserManagment" asp-action="RoleUpdate" asp-route-id="@item.Id" class="btn btn-warning" aria-current="page"> <i class="bi bi-pencil-square"></i>Update</a>

                        </td>
                    </tr> } }
                        </tbody>
                    </table>
                </div>
            </div>
                    <a asp-controller="UserManagment" asp-action="RoleCreate" class="btn btn-success" aria-current="page"><i class="bi bi-trash-fill"></i>Create</a>
        </div>
    </div>
</div>