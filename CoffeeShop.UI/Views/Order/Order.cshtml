
@model OrderViewModel
@{
    Layout = "_Layout";
}

<header class="logoAndmenu">
    <section class="header">
        <div class="logo-img">
            <a href="" class="logo-link">
                <img class="logo" src="/images/Photo/logo.png" alt="logo">
            </a>
        </div>
        <div class="menu">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a id="first" asp-controller="OurMenu" asp-action="Index">Our Menu</a>
            <a asp-controller="About" asp-action="Index">About</a>
            <a asp-controller="Gallery" asp-action="Index">Gallery</a>
            <a asp-controller="Contact" asp-action="Answer">Contact</a>
            <a asp-controller="Order" asp-action="Index">Order</a>
        </div>
    </section>
</header>
<main>
    <section class="Abouts">
        <div class="about-container">
            <div class="abouts">
                <h2 class="about-title-header">
                    Get Delivery
                </h2>
            </div>
        </div>
    </section>
    <section class="Contact" style="margin:0px 0px;">
        <form asp-action="order" method="post">
            <div class="drinkcarda">
                <div class="row col-md-12">
                    @await Component.InvokeAsync("Product", new { id = Model.Product.Id })
                    <div class="contacts-info col-md-8">
                        <div class="contactinfos">
                            <div class="messaggeinfo">
                                <input type="text" asp-for="Order.Address" id="message01" class="messaggee-text" placeholder="Your Address"
                                       required="">
                                <label for="message01" class="message-text"></label>
                            </div>
                            <div class="messaggeinfo">
                                <input type="text" asp-for="Order.Description" id="message01" class="messaggee-text" placeholder="Your Description"
                                       required="">
                                <input type="hidden" asp-for="Order.ProductId" id="message01" class="messaggee-text" placeholder="Your Address"
                                       value="@Model.Product.Id">
                                <label for="message01" class="message-text"></label>
                            </div>
                            <div class="messaggeinfo">
                                <input type="number" asp-for="Order.Count" id="message01" class="messaggee-text" placeholder="Count"
                                       required="">
                                <label for="message01" class="message-text"></label>
                            </div>
                            <div class="sendinfo">
                                <button type="submit" class="buttontext1">Send Message</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</main>